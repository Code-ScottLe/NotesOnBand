<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NotesOnBand.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converter="using:NotesOnBand.Converters"
    x:Class="NotesOnBand.Controls.BandNoteControl"
    mc:Ignorable="d"
    x:Name="this_" DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <UserControl.Resources>
        <ResourceDictionary>
            <converter:BandVersionToBandImageConverter x:Key="BandConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>

        <Image x:Name="Band"
               Source="{Binding CurrentBandVersion, Converter={StaticResource BandConverter}}"/>
    </Grid>
</UserControl>
