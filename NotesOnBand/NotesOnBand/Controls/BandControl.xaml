<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NotesOnBand.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Converters="using:NotesOnBand.Converters"
    x:Class="NotesOnBand.Controls.BandControl"
    mc:Ignorable="d"
    Height="200"
    Width="360" 
    x:Name="this_" d:DataContext="{d:DesignData /SampleData/BandControlViewModelSampleData.xaml}">

    <UserControl.Resources>
        <ResourceDictionary>
            <Converters:BandTwoPageVisibilityConverter x:Key="Two"></Converters:BandTwoPageVisibilityConverter>
            <Converters:BandOnePageVisibilityConverter x:Key="One"></Converters:BandOnePageVisibilityConverter>
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.DataContext>
        <local:BandControlViewModel/>
    </UserControl.DataContext>

    <Grid>

        <Grid 
            HorizontalAlignment="Left" 
            Height="70" 
            Margin="100,85,0,0" 
            VerticalAlignment="Top" 
            Width="167"
            Background="White"/>

        <Grid>
            <Image Source="{Binding BandImage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

    </Grid>
</UserControl>
